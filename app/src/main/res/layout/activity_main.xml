<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ori.MainActivity">

    <!-- 文本输入框 -->
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter text to synthesize"
        android:inputType="textMultiLine"
        android:minLines="3" />

    <Spinner
        android:id="@+id/textSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/text_spinner_prompt" />

    <!-- 合成按钮 -->
    <Button
        android:id="@+id/synthesizeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Synthesize"
        android:layout_marginTop="16dp" />

    <!-- 输出信息显示 -->
    <TextView
        android:id="@+id/outputMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="当前任务数：0"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:background="#f0f0f0"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/btnClearFiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除dumps" />
</LinearLayout>